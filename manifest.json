{
  "name": "Lyrics",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Lyrics for Youtube Music",
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "permissions": ["activeTab", "scripting", "sidePanel", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}